<div class="container">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg4">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.Description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Study Now</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>